{
  "author": {
    "email": "jo3mccain@icloud.com",
    "name": "FL03",
    "url": "https://github.com/FL03"
  },
  "bugs": "https://github.com/FL03/svkcl/issues",
  "bundledDependencies": [
    "@svkcl/core"
  ],
  "description": "This library expands on the custom components provided by SvelteKit to provide a more complete UI library.",
  "devDependencies": {
    "@sveltejs/adapter-auto": "latest",
    "@sveltejs/kit": "latest",
    "@sveltejs/package": "latest",
    "@tailwindcss/forms": "latest",
    "@tailwindcss/typography": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "autoprefixer": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-svelte3": "latest",
    "postcss": "latest",
    "prettier": "latest",
    "prettier-plugin-svelte": "latest",
    "publint": "latest",
    "svelte": "latest",
    "svelte-check": "latest",
    "tailwindcss": "latest",
    "tslib": "latest",
    "typescript": "latest",
    "vite": "beta"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./assets": "./dist/assets",
    "./misc": {
      "types": "./dist/misc/index.d.ts",
      "svelte": "./dist/misc/index.js"
    },
    "./nav": {
      "types": "./dist/nav/index.d.ts",
      "svelte": "./dist/nav/index.js"
    },
    "./sections": {
      "types": "./dist/sections/index.d.ts",
      "svelte": "./dist/sections/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "svelte": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "homepage": "https://github.com/FL03/svkcl/wiki",
  "license": "Apache-2.0",
  "name": "@svkcl/ui",
  "peerDependencies": {
    "@sveltejs/kit": "latest",
    "svelte": "latest"
  },
  "readme": "https://github.com/FL03/svkcl/#README",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FL03/svkcl.git"
  },
  "scripts": {
    "build": "vite build && npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite dev --host --port 3000",
    "format": "prettier --plugin-search-dir . --write .",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "preview": "vite preview --host --port 3000"
  },
  "svelte": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.0.5"
}
